<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/imageViewEmptyCartIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_google_logo"
        app:tint="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="24dp"
        android:contentDescription="Empty Shopping Cart Icon" />

    <TextView
        android:id="@+id/textViewEmptyCartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your cart is empty"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewEmptyCartMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looks like you haven't added anything to your cart yet."
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonStartShopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Start Shopping" />

</LinearLayout>
