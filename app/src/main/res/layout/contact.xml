<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ContactActivityOrFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewContactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Contact Us"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewContactSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:maxWidth="600dp"
                android:text="We'd love to hear from you. Send us a message and we'll respond as soon as possible."
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>

        <!-- Main Content (Form and Info) -->
        <!-- For larger screens (e.g., sw600dp), you might use a horizontal LinearLayout with weights, -->
        <!-- or a ConstraintLayout for more complex arrangements. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Change to horizontal for tablet layout, or use ConstraintLayout -->

            <!-- Contact Form Card (Left Column) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContactForm"
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">
                <!-- In a horizontal layout, add app:layout_weight="1" and android:layout_marginEnd="8dp" -->
                <include layout="@layout/contact_section" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Information & FAQ (Right Column) -->
            <LinearLayout
                android:id="@+id/layoutContactInfoAndFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- In a horizontal layout, add app:layout_weight="1" and android:layout_marginStart="8dp" -->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGetInTouch"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <include layout="@layout/contact_get_in_touch" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFaq"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/contact_faq" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

