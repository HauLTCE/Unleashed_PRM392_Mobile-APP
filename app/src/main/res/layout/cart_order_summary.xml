<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textViewSubtotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Subtotal (2 items)"
            android:layout_alignParentStart="true"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <TextView
            android:id="@+id/textViewSubtotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$59.98"
            android:layout_alignParentEnd="true"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping"
            android:layout_alignParentStart="true"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <TextView
            android:id="@+id/textViewShippingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$9.99"
            android:layout_alignParentEnd="true"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax"
            android:layout_alignParentStart="true"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <TextView
            android:id="@+id/textViewTaxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$5.60"
            android:layout_alignParentEnd="true"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutFreeShippingMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textViewFreeShippingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Add $40.02 more for free shipping!"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginBottom="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_alignParentStart="true"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$75.57"
            android:layout_alignParentEnd="true"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonProceedToCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to Checkout"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/buttonContinueShopping"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Shopping"
        android:layout_marginBottom="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We accept"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <!-- Replace with actual payment method icons/images -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginEnd="4dp"
            android:contentDescription="Visa" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginEnd="4dp"
            android:contentDescription="Mastercard" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginEnd="4dp"
            android:contentDescription="American Express" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="PayPal" />
    </LinearLayout>
</LinearLayout>
