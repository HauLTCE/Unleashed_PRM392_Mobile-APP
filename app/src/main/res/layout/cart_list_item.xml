<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            android:background="?attr/colorSurfaceVariant"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/textViewProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/buttonRemoveItem"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    tools:text="Awesome T-Shirt Unleashed Edition"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <ImageButton
                    android:id="@+id/buttonRemoveItem"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_launcher_foreground"
                    app:iconTint="?attr/colorError"
                    android:contentDescription="Remove item" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewProductVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Size: M â€¢ Color: Red"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewProductPricePerUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$29.99"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonDecreaseQuantity"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:icon="@drawable/ic_launcher_foreground"
                        app:iconPadding="0dp"
                        android:padding="0dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small" />

                    <TextView
                        android:id="@+id/textViewQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="32dp"
                        android:gravity="center"
                        tools:text="1"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonIncreaseQuantity"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:icon="@drawable/ic_launcher_foreground"
                        app:iconPadding="0dp"
                        android:padding="0dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewItemTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$59.98"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
