<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackground"
    android:elevation="1dp"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/notificationContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/notificationMeta"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            tools:text="Order Shipped!" />

        <TextView
            android:id="@+id/textViewNotificationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Your order #12345 has been shipped and is on its way." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notificationMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/notificationContent"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNotificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Oct 26, 2023" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNotificationNew"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="New"
            android:visibility="gone"
            app:chipBackgroundColor="?attr/colorSecondaryContainer"
            app:chipStrokeWidth="0dp"
            tools:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
