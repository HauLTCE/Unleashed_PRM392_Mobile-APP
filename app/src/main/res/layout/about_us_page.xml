<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AboutActivityOrFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:clipToPadding="false">

        <!-- Hero Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="48dp">

            <TextView
                android:id="@+id/textViewAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Unleashed"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/textViewAboutSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We believe fashion should be an expression of your authentic self. Our mission is to provide premium, sustainable clothing that empowers you to unleash your unique style."
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center_horizontal"
                android:maxWidth="600dp" />
        </LinearLayout>

        <!-- Story Section -->
        <!-- For larger screens, use ConstraintLayout or a horizontal LinearLayout with weights -->
        <LinearLayout
            android:id="@+id/layoutStorySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="48dp">

            <LinearLayout
                android:id="@+id/layoutStoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <!-- On large screens, this might have layout_weight="1" and marginEnd -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Story"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Founded in 2018, Unleashed began as a small boutique with a big vision: to create clothing that doesn't just look good, but feels good to wear and good to buy."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We started with a simple principle - quality over quantity. Every piece in our collection is carefully selected for its craftsmanship, comfort, and style. We work directly with ethical manufacturers who share our commitment to fair labor practices and environmental responsibility."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today, we're proud to serve customers worldwide while maintaining our core values of quality, sustainability, and authentic style."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingMultiplier="1.3" />
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewStory"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:src="@tools:sample/backgrounds/scenic"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
                android:background="?attr/colorSurfaceVariant" />
            <!-- On large screens, this might have layout_weight="1" and specific height/width -->
        </LinearLayout>

        <!-- Values Section -->
        <LinearLayout
            android:id="@+id/layoutValuesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="48dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Values"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- For md:grid-cols-3, use RecyclerView with GridLayoutManager or manually create -->
            <!-- horizontal LinearLayouts for rows on smaller screens if not using RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/about_us_value_page"
                tools:itemCount="3"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="1"
                tools:spanCount="3" /> <!-- tools:spanCount for preview in wider layouts -->
        </LinearLayout>

        <!-- Team Section -->
        <LinearLayout
            android:id="@+id/layoutTeamSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="48dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meet Our Team"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/about_us_list_member"
                tools:itemCount="3"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="1"
                tools:spanCount="3" /> <!-- tools:spanCount for preview in wider layouts -->
        </LinearLayout>

        <!-- Mission Statement Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorSurfaceVariant"
            android:padding="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal">
            <!-- Consider MaterialCardView for rounded corners if desired -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&quot;To empower individuals to express their authentic selves through thoughtfully designed, sustainably made clothing that doesn't compromise on style, quality, or values.&quot;"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.3"
                android:maxWidth="600dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

