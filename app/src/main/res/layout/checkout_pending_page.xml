<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CheckoutPendingActivityOrFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_lg"> <!-- Or your preferred corner radius -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="32dp">

                <ImageView
                    android:id="@+id/imageViewClock"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="Payment Pending Icon"
                    android:src="@mipmap/ic_google_logo"
                    app:tint="@color/checkout_pending" />

                <TextView
                    android:id="@+id/textViewPendingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Payment Pending"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPendingMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_horizontal"
                    android:text="Your payment is being processed. This may take a few minutes. You will receive a confirmation email once the payment is complete."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="?attr/colorSurfaceVariant"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <!-- You might want to use a MaterialCardView here if you want elevation/corners -->
                    <!-- For simplicity, using a LinearLayout with background -->

                    <TextView
                        android:id="@+id/textViewOrderNumberLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Number:"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewOrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        tools:text="#ORD-XYZ123ABC" />

                    <TextView
                        android:id="@+id/textViewOrderStatusLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewOrderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Processing"
                        android:textAppearance="?attr/textAppearanceBodySmall" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCheckOrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Check Order Status" />

                <Button
                    android:id="@+id/buttonReturnHome"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Return Home" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
